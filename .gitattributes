# Line endings
* text=auto eol=lf

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
.env* text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
LICENSE text eol=lf

# JSON
*.json text eol=lf

# Docker
Dockerfile text eol=lf
.dockerignore text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.db binary
*.sqlite binary
*.sqlite3 binary

# ===========================================
# APPLICATION SETTINGS
# ===========================================
PROJECT_NAME=OrderPlacementService
DEBUG=False
ENVIRONMENT=development

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_RETENTION=90 days
LOG_ROTATION=00:00

# ===========================================
# API SETTINGS
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api
API_RELOAD=True

# ==============================================================================
# DATABASE - PostgreSQL (Source of Truth for Orders & Products)
# ===========================================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5433/oms_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=False

# ===========================================
# REDIS - Inventory Caching & Distributed Locking
# ===========================================
REDIS_URL=redis://localhost:6380/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=True
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Inventory Lock Settings
INVENTORY_LOCK_TIMEOUT=30
INVENTORY_LOCK_SLEEP=0.1

# ===========================================
# RABBITMQ - Event-Driven Processing
# ===========================================
RABBITMQ_URL=amqp://guest:guest@localhost:5673/
RABBITMQ_EXCHANGE=order_events
RABBITMQ_EXCHANGE_TYPE=topic
RABBITMQ_QUEUE_DURABLE=True
RABBITMQ_PREFETCH_COUNT=10

# ===========================================
# CORS SETTINGS
# ===========================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ===========================================
# SECURITY
# ===========================================
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# ORDER MANAGEMENT SETTINGS
# ===========================================
# Maximum items per order
MAX_ORDER_ITEMS=50

# Order timeout (in seconds)
ORDER_TIMEOUT=300

# Inventory check retries
INVENTORY_CHECK_RETRIES=3

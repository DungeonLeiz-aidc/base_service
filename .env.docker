# ===========================================
# DOCKER-SPECIFIC APPLICATION SETTINGS
# ===========================================
PROJECT_NAME=OrderPlacementService
DEBUG=False
ENVIRONMENT=development
LOG_FORMAT=pretty

# ===========================================
# DATABASE - Internal Docker Networking
# ===========================================
DATABASE_URL=postgresql+asyncpg://postgres:password@db:5432/oms_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=False

# ===========================================
# REDIS - Internal Docker Networking
# ===========================================
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# ===========================================
# RABBITMQ - Internal Docker Networking
# ===========================================
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_EXCHANGE=order_events

# ===========================================
# SECURITY & API
# ===========================================
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
API_HOST=0.0.0.0
API_PORT=8000
